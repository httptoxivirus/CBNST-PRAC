#include<stdio.h>
#include<math.h>
float f(float x) {
    return exp(x);
}

int main()
{
    float a,b,h,ans;
    int n;
    printf("Enter the lower and  upper limit : \n");
    scanf("%f%f",&a,&b);
    printf("Enter the no. of intervals \n");
    scanf("%d",&n);
    h = (b-a)/n;
    ans = f(a)+f(a+n*h);
    for(int i=1; i<n; i++) {
        float value =  f(a+n*h);
        if(n%2 == 0) ans += 2*value;
        else ans += 4*value;
    }
    printf("%f",(h/3)*ans);
    
    return 0;
}
